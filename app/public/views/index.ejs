<!DOCTYPE html>
	<html lang="en">
	<head>
		<meta charset="UTF-8">
		<title>Document</title>
		<link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.5/css/bootstrap.min.css">
		<style type="text/css">
			input{
				margin: 5px;
			}
		</style>
	</head>
	<body  ng-app="tablas" >
		<div class="col-lg-12" ng-controller="envios">
			<div class="col-lg-10" style="margin-bottom: 15px">
			<label>USUARIO</label>
				<input type="text" class="form-control" ng-model="usu.nombre" placeholder="nombre">
				<input type="password" class="form-control" ng-model="usu.pass" placeholder="password">
				<button class="btn-sm btn-success" ng-click="enviarUsuario(usu)">enviar</button>
			</div>
			<div class="col-lg-10">
			<label>PRODUCTOS</label>
				<input type="text" class="form-control" ng-model="pro.des" placeholder="descuento">
				<input type="text" class="form-control" ng-model="pro.valor" placeholder="valor">
				<button class="btn-sm btn-success" ng-click="enviarProducto(pro)">enviar</button>
			</div>
		</div>
		<script type="text/javascript" src="/static/bower_components/angular/angular.min.js"></script>
		<script type="text/javascript">
		angular.module('tablas',[])
		.controller('envios', ['$http', '$scope', function($http, $scope){
			$scope.enviarUsuario = function(data){
				$http.post('/', data)
				.success(function(data){
					if(data.hasOwnProperty('code')){
						alert(data.code);
					}
				});
			}
			$scope.enviarProducto = function(data){
				$http.post('/producto', data)
				.success(function(){
					console.log(data);
				});
			}
		}]);
		</script>
	</body>
	</html>	